<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.bikeshop.MainActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bike Shop"
        android:id="@+id/bikeShopView"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ff9e2e"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/servicesButton"
        android:textColor="#000"
        android:background="#00e6ebd9"
        android:textSize="20sp"
        android:text="services"
        android:textAllCaps="false"
        android:clickable="false"
        android:layout_below="@+id/bikeShopView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rentals"

        android:id="@+id/rentalsButton"
        android:textColor="#000"
        android:textSize="20sp"
        android:background="#00e6ebd9"
        android:textAllCaps="false"
        android:allowUndo="true"
        android:layout_below="@+id/servicesButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
